    color: #ffffff !important;
}

/* Estilo base para finalistas (sin ganador) */
QFrame#finalistaCard {
    background-color: rgba(45, 45, 45, 0.85);
    border: 1px solid rgba(22, 160, 133, 0.3);
    border-radius: 6px;
}

