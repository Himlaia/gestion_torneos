            <staticText>
                <reportElement mode="Opaque" x="350" y="0" width="65" height="25" backcolor="#2C3E50" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true" size="8"/></textElement>
                <text><![CDATA[Goles]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="415" y="0" width="70" height="25" backcolor="#2C3E50" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true" size="8"/></textElement>
                <text><![CDATA[Amarillas]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="485" y="0" width="70" height="25" backcolor="#2C3E50" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font isBold="true" size="8"/></textElement>
                <text><![CDATA[Rojas]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField isBlankWhenNull="true">
                <reportElement x="0" y="0" width="150" height="20"/>
                <textElement verticalAlignment="Middle"><font size="8"/></textElement>
                <textFieldExpression><![CDATA[$F{jugador}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="150" y="0" width="100" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="8"/></textElement>
                <textFieldExpression><![CDATA[$F{posicion}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="250" y="0" width="100" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="8"/></textElement>
                <textFieldExpression><![CDATA[$F{jugador_curso}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="350" y="0" width="65" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="8"/></textElement>
                <textFieldExpression><![CDATA[$F{goles}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="415" y="0" width="70" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="8"/></textElement>
                <textFieldExpression><![CDATA[$F{amarillas}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="485" y="0" width="70" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"><font size="8"/></textElement>
                <textFieldExpression><![CDATA[$F{rojas}]]></textFieldExpression>
